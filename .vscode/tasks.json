{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "PathToCompiler",
            "args": [
                "-g",
                "-std=c++17",
                "${file}",
                "-I./include",
                "-L./lib",
                "-lopengl32",
                "-lglew32",
                "-lglfw3dll",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe" 
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "compiler: PathToCompiler"
        }
    ]
}